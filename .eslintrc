{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "eqeqeq": ["warn", "smart"],
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "quotes": ["error", "double"],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "never"],
    "no-eval": ["error"],
    "no-constant-condition": ["error", { "checkLoops": false }],

    "react/display-name": ["off"],
    "react/prop-types": ["off"]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "globals": {
    "fetch": true
  },
  "plugins": ["react"],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}
